cmake_minimum_required(VERSION 2.8)
cmake_policy(SET CMP0011 NEW)

set(AVERSIVE_TOOLCHAIN_STM32F429 1 CACHE STRING "")
set(AVERSIVE_TOOLCHAIN_MCU "stm32f429xx" CACHE STRING "")
include("${CMAKE_CURRENT_LIST_DIR}/stm32f4.cmake")

set(STM32F429XX_FLAGS "-DSTM32F429xx -s")
set(STM32F429XX_FLAGS "${STM32F429XX_FLAGS} -DAVERSIVE_TOOLCHAIN_STM32F429")

set(CMAKE_C_FLAGS      "${CMAKE_C_FLAGS} ${STM32F429XX_FLAGS}")
set(CMAKE_CXX_FLAGS    "${CMAKE_CXX_FLAGS} ${STM32F429XX_FLAGS}")
set(CMAKE_ASM_FLAGS    "${CMAKE_ASM_FLAGS} ${STM32F429XX_FLAGS}")

unset(STM32F429XX_FLAGS)
